<?xml version="1.0" encoding="UTF-8"?>  
<beans xmlns="http://www.springframework.org/schema/beans"  
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
           xsi:schemaLocation="http://www.springframework.org/schema/beans   
        http://www.springframework.org/schema/beans/spring-beans.xsd">  
          
    <bean id="messageService" class="cz.mudraon.server.MessageImpl"></bean>  
    <bean name="/MessageService" class="org.springframework.remoting.caucho.HessianServiceExporter">  
        <property name="service" ref="messageService"></property>  
        <property name="serviceInterface" value="cz.mudraon.shared.MessageApi"></property>  
    </bean>  
      
</beans>  